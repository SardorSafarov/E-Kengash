                            android:textSize="@dimen/qachon_text"
                            app:layout_constraintStart_toEndOf="@+id/holatt"
                            app:layout_constraintTop_toBottomOf="@+id/qachon_tanlanganda" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

